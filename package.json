  "author": "Andrew Stroup <andrew@stroup.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stroupaloop/pr-vibe.git"
  },
  "bugs": {
    "url": "https://github.com/stroupaloop/pr-vibe/issues"
  },
  "homepage": "https://stroupaloop.github.io/pr-vibe/",
